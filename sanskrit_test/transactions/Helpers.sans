module Helpers {
    err ValidationError;

    public risky<.ValidationError> fun AssertTrue(r:$bool):() {
         () = &switch r:$bool {
             true => {
                 return;
             };
             false => {
                 throw .ValidationError;
             };
         };
         return;
    };

    public risky<.ValidationError> fun AssertFalse(r:$bool):() {
         () = &switch r:$bool {
             false => {
                 return;
             };
             true => {
                 throw .ValidationError;
             };
         };
         return;
    };

    public risky<.ValidationError> fun AssertEqU8(v1:$u8,v2:$u8):() {
        r = call $Eq[$u8](v1,v2);
        () = call .AssertTrue(r);
        drop r;
        return;
    };

